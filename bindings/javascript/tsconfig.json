{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "__tests__"]
}
